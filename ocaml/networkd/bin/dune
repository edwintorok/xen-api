(rule
 (targets xcp-networkd.1)
 (deps networkd.exe)
 (action
  (with-stdout-to
   %{targets}
   (run %{deps} "--help=groff")
  )
 )
)

(executable
 (name networkd)
 (public_name xapi-networkd)
 (package xapi-networkd)
 (modes exe)
 (libraries
  astring
  dune-build-info
  forkexec
  http_lib
  integers
  netlink
  networklibs
  rpclib.core
  rpclib.json
  result
  rresult
  threads.posix
  xapi-client
