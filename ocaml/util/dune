(rule
  (targets xapi_build_info.ml)
  (deps
    gen_build_info_ml.sh
    (env_var XAPI_VERSION)
  )
  (action (with-stdout-to %{targets} (bash ./gen_build_info_ml.sh)))
)

(library
  (name xapi_version)
  (public_name xapi-consts.xapi_version)
  (modules xapi_version xapi_build_info)
  (libraries
    xapi-inventory
  )
  (wrapped false)
)

